# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values
#
# AWS CREDENTIALS:
# Option 1: Set environment variables (recommended) - source .env before running terraform
#   export AWS_ACCESS_KEY_ID="your-key"
#   export AWS_SECRET_ACCESS_KEY="your-secret"
#
# Option 2: Uncomment and set below (not recommended - avoid committing secrets)
# aws_access_key_id     = "your-access-key-id"
# aws_secret_access_key = "your-secret-access-key"

aws_region      = "us-east-2"
project_name    = "ansible-demo"
instance_type   = "t3.micro"
web_server_count = 2

# AWS Application/Resource Group ARN - all resources will be tagged with this
aws_application_arn = "arn:aws:resource-groups:us-east-2:579320645987:group/ansible-demo/03si1j8ufh829fyd3wdhgx33vy"

# REQUIRED: Update with your AWS EC2 Key Pair name
key_pair_name   = "my-key-pair"

# Security: Restrict SSH access to your IP (optional)
# ssh_cidr = "YOUR_IP_ADDRESS/32"

# Optional: Custom path to SSH key for Ansible
# ansible_ssh_key_path = "~/.ssh/my-key.pem"

